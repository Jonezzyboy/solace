<% include ./include/head %>
<link type="text/css" rel="stylesheet" href="static/css/quiz.css" media="screen,projection">
<body>
  <% include ./include/nav %>
  <main>

    <div class="section white">
      <div class="row container flow-text">
        <h2 class="header">Quiz Results</h2>
        <h4>You Scored: <%= percentage %>%</h4>
      </div>
    </div>
    <div class="row container flow-text">
      <% for (var i = 0; i < questions.length; i++) { %>
        <div class="row">
          <h4><%= questions[i] %></h4>
          <% if(answers[i] != correct[i]){ %>
            <p class = "red-text">Your Answer: <%= answers[i] %></p>
            <p>Correct Answer: <%= correct[i] %></p>
          <% } else{ %>
            <p class = "green-text">Your Answer: <%= answers[i] %></p>
          <% } %>
        </div>
      <% } %>
      <form class="quizForm" action="quizGame" method="POST">
        <div class="row">
          <div class="col s6">
            <button class="btn orange darken-2 waves-effect waves-light col s12" formaction="quizGame" formmethod="GET">Return to Quiz Selection</button>
          </div>
          <div class="col s6">
            <input id="quizSelection" name="quizSelection" type="hidden" value='{"grade":<%= grade %>, "category":"<%= category %>", "quizTitle":"<%= quizTitle %>"}'>
            <button class="btn orange darken-2 waves-effect waves-light col s12">Play Again</button>
          </div>
        </div>
      </form>
    </div>

  </main>
  <% include ./include/scripts %>
  <% include ./include/footer %>
